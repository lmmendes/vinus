.addresses
  .table
    %table.data
      %thead
        %tr
          %th= t('vinus.customers.type')
          %th= t('vinus.customers.default')
          %th= t('vinus.custoemrs.address')
          %th
      %tbody
        - if @addresses.empty?
          %tr.empty
            %td{colspan: 4}= t('vinus.customers.no_addresses')
        - else
          - for address in @addresses
            %tr
              %td= address.address_type.capitalize
              %td= boolean_tag address.default
              %td= address.full_address
              %td= link_to t('vinus.customers.edit'), edit_customer_address_path(@customer, address)
