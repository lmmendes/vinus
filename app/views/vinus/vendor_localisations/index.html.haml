- @page_title = "#{t('vinus.localisations.localisations')} - #{@vendor.name}"

= content_for :header do
  %p.buttons
    = link_to t('vinus.localisations.back'), product_categories_path, :class => 'button'
    = link_to t('vinus.localisations.new_localisation'), [:new, @vendor, :localisation], :class => 'button green'

  %h2.products= t('vinus.localisations.localisations_of', name: @vendor.name)

.table
  %table.data
    %thead
      %tr
        %th{:width => '20%'}= t('vinus.localisations.language')
        %th{:width => '50%'}= t('vinus.products.name')
        %th{:width => '15%'}= t('vinus.products.permalink')
    %tbody
      - if @localisations.empty?
        %tr.empty
          %td{:colspan => 4}= t('vinus.localisations.no_localisations')
      - else
        - for localisation in @localisations
          %tr
            %td= localisation.locale
            %td= link_to localisation.name, edit_vendor_localisation_path(@vendor, localisation)
            %td= localisation.permalink
