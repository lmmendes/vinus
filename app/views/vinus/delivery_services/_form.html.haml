= form_for @delivery_service do |f|
  = f.error_messages
  = field_set_tag t('vinus.delivery_services.details') do
    .splitContainer
      %dl.half
        %dt= f.label :name, t('vinus.delivery_services.name')
        %dd= f.text_field :name, class: 'focus text'
      %dl.half
        %dt= f.label :code, t('vinus.delivery_services.code')
        %dd= f.text_field :code, class: 'text'
    .splitContainer
      %dl.half
        %dt= f.label :active, t('vinus.delivery_services.active')
        %dd.checkbox
          = f.check_box :active
          = f.label :active,  t('vinus.delivery_services.active_info')
      %dl.half
        %dt= f.label :default, t('vinus.delivery_services.default')
        %dd.checkbox
          = f.check_box :default
          = f.label :default,  t('vinus.delivery_services.default_info')

  = field_set_tag  t('vinus.delivery_services.courier') do
    .splitContainer
      %dl.half
        %dt= f.label :courier,  t('vinus.delivery_services.courier_name')
        %dd= f.text_field :courier, class: 'text'
      %dl.half
        %dt= f.label :tracking_url,  t('vinus.delivery_services.tracking_url')
        %dd
          = f.text_field :tracking_url, class: 'text'
          %p.help=  t('vinus.delivery_services.tracking_url_help_html')

  %p.submit
    - unless @delivery_service.new_record?
      %span.right= link_to  t('vinus.delete'), [@delivery_service], class: 'button purple', method: :delete, data: {confirm: t('vinus.delivery_services.delete_confirmation')}
    = f.submit t('vinus.submit'), class: 'button green'
    = link_to t('vinus.cancel'), :delivery_services, class: 'button'
